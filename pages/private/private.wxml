<!--pages/private/private.wxml-->
<view class="container">
  <view class="qk_mid">
      <image>微信头像</image>
      <text>微信名称</text>
      <view class="con_h3">当前余额</view>
      <button open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="onGotUserInfo">
  提现
</button>    
</view>

<view class="conter">
<view class="swiper-tab">
  <view class="swiper-tab-item {{currentTab==0 ? 'on' : ''}}" data-current="0"     bindtap="swichNav">发出的夸奖</view> 
  <view class="swiper-tab-item {{currentTab==1 ? 'on' : ''}}" data-current="1"    bindtap="swichNav">我的求夸</view>
</view> 

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{clientHeight?clientHeight-'40'+'px':'auto'}}" bindchange="bindChange" >
  <swiper-item> 
    <block wx:for="{{hot}}" wx:for-item="item" wx:key='idx'>
      <view class="qkzt_con" bindtap='bindClick' data-id='{{item._id}}'>
        <view class="qk_left">
            <image class="img_tx" src="{{item.avatarUrl}}" mode="aspectFill"></image>
        </view>
        <view class="qk_mid">
            <view class="con_h3">{{item.nickname}}</view>
            <view class="h2">{{item.content}}</view>      
        </view>
        <view class="qk_money"><span class="qk_money_f">¥</span>{{item.money}}</view>
      </view>
    </block>
  </swiper-item> 
  
  <swiper-item> 
    <block wx:for="{{near}}" wx:for-item="item" wx:key='idx'>
      <view class="qkzt_con">
        <view class="qk_left">
            <image class="img_tx" src="{{item.avatarUrl}}" mode="aspectFill"></image>
        </view>
        <view class="qk_mid">
            <view class="con_h3">{{item.nickname}}</view>
            <view class="h2">{{item.content}}</view>      
        </view>
        <view class="qk_money"><span class="qk_money_f">¥</span>{{item.money}}</view>
      </view>
    </block>
  </swiper-item>
</swiper>
</view>
</view>
