<!--pages/private/private.wxml-->
<view class="gr_bg">
      <view class="gr_con">
          <view class="gr_left">
             <image class="img_tx" src="{{userInfo.avatarUrl}}" mode="aspectFill"></image>
          </view>
          <view class="gr_mid">
              <view class="h2">{{userInfo.nickName}}</view>
              <view class="con_h3">您已成为正能量使者</view>      
           </view>
           <view class="tx_con_right"><button class='btn1' hover-class='btn_hover' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="onGotUserInfo">
  提现(40)元
</button> </view>
      </view>
</view>

<view class="conter">

<view class="swiper-tab">
  <view class="swiper-tab-item {{currentTab==0 ? 'on' : ''}}" data-current="0"     bindtap="swichNav">发出的夸奖(38)</view> 
  <view class="swiper-tab-item {{currentTab==1 ? 'on' : ''}}" data-current="1"    bindtap="swichNav">我的求夸(12)</view>
</view> 

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{clientHeight?clientHeight-'160'+'px':'auto'}}" bindchange="bindChange" >
  <!--发出的求夸列表样式-->
  <swiper-item> 
    <scroll-view scroll-y="true">
    <block wx:for="{{mine}}" wx:for-item="item" wx:key='idx'>
      <view class="mrzj_con">   
          <view class="h2">{{item.content}}</view>
          <view class="bc_con">
            <view class="bc_img"><image class="img_small" src="/pics/time.png" mode="aspectFill"></image></view>
            <view class="bc_date">2019/03/28 12:20:29</view>
            <view class="bc_img"><image class="img_small" src="/pics/like1.png" mode="aspectFill"></image></view>
            <view class="bc_like">12879</view>
          </view>
          <view class="like_bg">
              <view class="like_heart1">分到<span class="yel_money">1.5元</span></view>
          </view>
      </view>
    </block>
     </scroll-view>
  </swiper-item> 
  
  <!--我要求夸列表样式-->
  <swiper-item> 
    <scroll-view scroll-y="true">
    <block wx:for="{{mine}}" wx:for-item="item" wx:key='idx'>
      <view class="mrzj_con">   
          <view class="h2">{{item.content}}</view>
          <view class="bc_con">
            <view class="bc_img"><image class="img_small" src="/pics/time.png" mode="aspectFill"></image></view>
            <view class="bc_date">2019/03/28 12:20:29</view>
            <view class="bc_img"><image class="img_small" src="/pics/kua.png" mode="aspectFill"></image></view>
            <view class="bc_like">128709</view>
          </view>
          <view class="like_bg">
              <view class="like_heart1">悬赏<span class="yel_money">1.5元</span></view>
          </view>
      </view>
    </block>
    </scroll-view>
  </swiper-item>
</swiper>
</view>
