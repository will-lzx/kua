<!--pages/publish/publish.wxml-->

<div>发布悬赏，征集夸赞</div>
<textarea placeholder='请输入想求夸的内容。如：我不开心，求夸' bindinput='getcontent'>
</textarea>

<div style="display:flex;justify-content:space-between">
  <div>悬赏金额</div>
  <view style='text-align:right'>
    <input type="digit" id='money' placeholder='请输入金额(元)' bindinput='getinput'></input>
  </view>
</div>
<button bindtap='publish'>发布悬赏</button>
<div style='text-align:right'>15分钟内没人夸赞，将自动退回赏金</div>