.fb_bg{
  background-color: #ff4d4d;
  margin: 50rpx 30rpx;
  padding: 30rpx;
  border-radius:10px;
}
.fb_til{
  font-size: 16px;
  color: white;
  line-height: 30px;
}
.fb_dis{
  font-size: 14px;
  line-height: 20px;
  border-radius:2px;
  margin: 10rpx 0;
  background-color: white;
  box-shadow: inset 0 1px 0 0 rgba(197, 197, 197, 0.3);
  padding: 20rpx;
  
}
.fb_date{
 font-size: 12px;
 color: #999;
 float: right;
 text-align: right;
 line-height: 18px;
